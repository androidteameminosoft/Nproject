<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#787878"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtFbPost"
        android:layout_alignLeft="@+id/edtFbPost"
        android:layout_marginBottom="15dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rlFbHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

    <com.eminosoft.gypsy.LoginButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlFbHeader"
        android:layout_margin="30dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/login" />

    <EditText
        android:id="@+id/edtFbPost"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:ems="10" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="90dip"
        android:layout_height="45dip"
        android:layout_alignLeft="@+id/login"
        android:layout_below="@+id/edtFbPost"
        android:layout_margin="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/button_org"
        android:gravity="center"
        android:paddingRight="10dip"
        android:text="Share"
        android:textColor="@color/White"
        android:visibility="invisible" />

</RelativeLayout>